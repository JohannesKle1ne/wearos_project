<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/idInput"
        android:layout_width="76dp"
        android:layout_height="31dp"
        android:layout_marginStart="40dp"
        android:background="#FFFFFF"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log" />

    <TextView
        android:id="@+id/userId"
        android:layout_width="76dp"
        android:layout_height="31dp"
        android:layout_marginStart="10dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/image"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toEndOf="@+id/idInput"
        app:layout_constraintTop_toBottomOf="@+id/log" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:onClick="sendUserInformation"
        android:text="Start User Session"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log" />

    <com.example.mobilegooglevison.BitmapView
        android:id="@+id/image"
        android:layout_width="338dp"
        android:layout_height="181dp"
        android:layout_marginTop="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getWatchLogs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:onClick="requestWatchLogs"
        android:text="End current user session"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image" />

    <TextView
        android:id="@+id/watchLogCount"
        android:layout_width="164dp"
        android:layout_height="29dp"
        android:layout_marginEnd="10dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/getWatchLogs"
        app:layout_constraintTop_toBottomOf="@+id/image" />

    <com.example.mobilegooglevison.LogView
        android:id="@+id/log"
        android:layout_width="296dp"
        android:layout_height="232dp"
        android:layout_marginBottom="64dp"
        android:scrollbars="vertical"
        android:text="Log: \n\n"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>