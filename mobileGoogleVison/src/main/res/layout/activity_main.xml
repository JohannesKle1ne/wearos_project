<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE77A"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/idInputForStarting"
        android:layout_width="76dp"
        android:layout_height="31dp"
        android:background="#FFFFFF"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/log"
        app:layout_constraintTop_toBottomOf="@+id/startUserSession" />

    <TextView
        android:id="@+id/userId"
        android:layout_width="77dp"
        android:layout_height="26dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/log"
        app:layout_constraintTop_toBottomOf="@+id/idInputForStarting" />


    <Button
        android:id="@+id/startUserSession"
        android:layout_width="70dp"
        android:layout_height="78dp"
        android:layout_marginBottom="50dp"
        android:onClick="handleButtonClick"
        android:text="Start User Session"
        android:textSize="10dp"
        android:background="#5F60FA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/log"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/showBitmaps"
        android:layout_width="182dp"
        android:layout_height="81dp"
        android:onClick="handleButtonClick"
        android:text="Show Bitmaps"
        android:textSize="10dp"
        android:background="#5F60FA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log" />

    <Button
        android:id="@+id/loadBitmaps"
        android:layout_width="70dp"
        android:layout_height="78dp"
        android:background="#5F60FA"
        android:onClick="handleButtonClick"
        android:text="Load Bitmaps"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/startUserSession"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/log"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/idInputForLoading"
        android:layout_width="76dp"
        android:layout_height="31dp"
        android:background="#FFFFFF"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/log"
        app:layout_constraintTop_toBottomOf="@+id/loadBitmaps" />


    <com.example.mobilegooglevison.LogView
        android:id="@+id/log"
        android:layout_width="290dp"
        android:layout_height="419dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="150dp"
        android:scrollbars="vertical"
        android:text="Log: \n\n"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.mobilegooglevison.BitmapView
        android:rotation="90"
        android:id="@+id/bitmapView"
        android:layout_width="570dp"
        android:layout_height="360dp"
        android:background="#FFFFFF"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>